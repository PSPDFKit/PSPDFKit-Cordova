<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="pspdfkit-cordova" version="1.0.18">
  <engines>
    <engine name="cordova" version="&gt;=6.3.1" />
  </engines>
  <name>PSPDFKit</name>
